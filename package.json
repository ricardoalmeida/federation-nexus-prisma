  "dependencies": {
    "@apollo/federation": "^0.20.4",
    "@nexus/schema": "^0.16.0",
    "@prisma/client": "^2.9.0",
    "apollo-server-express": "^2.18.2",
    "graphql": "^15.4.0",
    "graphql-middleware": "^4.0.2",
    "graphql-scalars": "^1.4.1",
    "graphql-shield": "^7.3.7",
    "graphql-transform-federation": "^2.1.0",
    "nexus-plugin-prisma": "^0.22.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.9.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.3",
    "apollo-server-testing": "^2.18.2",
    "env-cmd": "^10.1.0",
